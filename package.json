{
  "name": "wolle-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@fluentui/web-components": "^2.6.1"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "tauri:dev": "tauri dev",
    "preflight:webview2": "powershell -ExecutionPolicy Bypass -File ./tools/webview2-preflight.ps1",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.ts --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "lint:sarif": "eslint . --ext .js,.ts --format node_modules/@microsoft/eslint-formatter-sarif/sarif.js --output-file eslint.sarif",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc -p tsconfig.test.json --noEmit",
    "deps:ts-unused": "npx --yes ts-prune -p tsconfig.prune.json",
    "deps:ts-unused:ci": "npx --yes ts-prune -p tsconfig.prune.json -e",
    "deps:rust-unused": "powershell -ExecutionPolicy Bypass -File ./tools/rust-udeps.ps1",
    "prepare": "husky"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.8.3",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.1.0",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
