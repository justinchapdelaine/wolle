{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["vitest/globals", "node", "vite/client"]
  },
  "include": [
    "src",
    "index.html",
    "vite.config.*",
    "eslint.config.*",
    "vitest.config.ts"
  ],
  "exclude": ["dist", "node_modules", "src-tauri"]
}
